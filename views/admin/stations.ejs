<!DOCTYPE html>
<html>
<head>
  <title>Station Management</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
  <div class="container py-4">
    <h2>Station Management</h2>
    <form action="/admin/stations/add" method="POST" class="row g-3 mb-4">
        <div class="col-md-3"><input name="StationName" required placeholder="Station Name" class="form-control" /></div>
        <div class="col-md-4"><input name="StationCode" required placeholder="Code" class="form-control" /></div>
        <div class="col-md-3"><input name="City" required placeholder="City" class="form-control" /></div>
        <div class="col-md-2"><button class="btn btn-success">Add Station</button></div>
  </form>
  
  <table class="table">
    <thead>
      <tr><th>ID</th><th>Name</th><th>Code</th><th>City</th><th>Actions</th></tr>
    </thead>
    <tbody>
        <% stations.forEach(station => { %>
          <tr>
            <form method="POST" action="/admin/stations/edit/<%= station.StationID %>">
              <td><%= station.StationID %></td>
              <td><input name="StationName" class="form-control" value="<%= station.StationName %>" required></td>
              <td><input name="StationCode" class="form-control" value="<%= station.StationCode %>" required></td>
              <td><input name="City" class="form-control" value="<%= station.City %>" required></td>
              <td>
                <button class="btn btn-sm btn-success">Save</button>
                <form method="POST" action="/admin/stations/delete/<%= station.StationID %>" style="display:inline;">
                  <button class="btn btn-sm btn-danger" onclick="return confirm('Delete this station?')">Delete</button>
                </form>
              </td>
            </form>
          </tr>
        <% }) %>
      </tbody>
      
  </table>
</div>
</body>
</html>
  